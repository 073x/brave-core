<LinearLayout
	xmlns:app="http://schemas.android.com/apk/res-auto" 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/shields_tooltip_layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/shields_tooltip_background">

	<TextView
		android:id="@+id/tv_tooltip_info"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="14sp"
		android:gravity="end"
		android:text="@string/tap_shield"
		android:textColor="@color/onboarding_text_color_new"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="20dp"
		android:paddingTop="8dp"
		android:paddingStart="16dp"
		android:paddingBottom="8dp"
		android:paddingEnd="16dp"
		android:background="@drawable/brave_shields_tooltip_text_bg">

		<TextView
			android:id="@+id/tv_count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:textSize="80sp"
			android:textColor="@color/onboarding_text_color_new"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="8dp"
			android:text="@string/shield_tooltip_text"
			android:textSize="18sp"
			android:textColor="@color/onboarding_text_color_new"/>

	</LinearLayout>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="14dp"
		android:paddingTop="8dp"
		android:paddingStart="16dp"
		android:paddingBottom="8dp"
		android:paddingEnd="16dp"
		android:drawablePadding="10dp"
        	app:drawableStartCompat="@drawable/ic_brave_36"
		android:text="@string/shield_tooltip_desc"
		android:textSize="14sp"
		android:textColor="@color/onboarding_text_color_new"
		android:background="@drawable/brave_shields_tooltip_text_bg"/>

</LinearLayout>
