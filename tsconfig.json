{
  "extends": "./tsconfig-webpack",
  "include": [
    // explicitly include ts/tsx so JS files can be avoided
    // since they are auto-required via allowJS: true
    // see https://www.typescriptlang.org/docs/handbook/tsconfig-json.html#details
    "components/**/*.ts",
    "components/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "components/test/**/*",
    "components/**/spec.tsx"
  ]
}
